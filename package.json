{
  "name": "node-sass-magic-importer",
  "description": "Custom node-sass importer for selector specific imports, node importing, module importing, globbing support and importing files only once",
  "keywords": [
    "glob-importer",
    "importer",
    "module-importer",
    "node-sass",
    "package-importer",
    "sass",
    "selector-importer"
  ],
  "version": "4.1.4",
  "author": "Markus Oberlehner",
  "homepage": "https://github.com/maoberlehner/node-sass-magic-importer",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/maoberlehner/node-sass-magic-importer"
  },
  "bugs": {
    "url": "https://github.com/maoberlehner/node-sass-magic-importer/issues"
  },
  "dependencies": {
    "css-node-extract": "^0.2.2",
    "css-selector-extract": "^2.0.5",
    "postcss-scss": "^1.0.0"
  },
  "devDependencies": {
    "@types/glob": "^5.0.30",
    "@types/node": "^7.0.18",
    "@types/sinon": "^2.2.1",
    "ava": "^0.19.1",
    "node-sass": "^4.5.2",
    "nyc": "^10.3.2",
    "rimraf": "^2.6.1",
    "sinon": "^2.2.0",
    "tslint": "^5.2.0",
    "typescript": "^2.3.2"
  },
  "main": "dist/index.js",
  "scripts": {
    "start": "yarn run watch",
    "watch": "yarn run clean && tsc -w",
    "build": "yarn run clean && tsc",
    "clean": "rimraf dist",
    "lint": "tslint 'src/**/*.ts'",
    "test": "yarn run build && ava dist/**/*.spec.js test/**/*.test.js",
    "coverage": "yarn run build && nyc ava dist/**/*.spec.js"
  }
}
