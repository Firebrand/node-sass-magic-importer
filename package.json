{
  "name": "node-sass-magic-importer",
  "description": "Custom node-sass importer for selector specific imports, module importing, globbing support, import files only once and importing of files with .css extension",
  "version": "0.1.4",
  "author": "Markus Oberlehner",
  "homepage": "https://github.com/maoberlehner/node-sass-magic-importer",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/maoberlehner/node-sass-magic-importer"
  },
  "bugs": {
    "url": "https://github.com/maoberlehner/node-sass-magic-importer/issues"
  },
  "dependencies": {
    "node-sass-glob-importer": "^2.0.1",
    "node-sass-package-importer": "^1.0.6",
    "node-sass-selector-importer": "^1.0.1",
    "unique-concat": "^0.2.2"
  },
  "devDependencies": {
    "bootstrap": "4.0.0-alpha.2",
    "chai": "^3.5.0",
    "chai-as-promised": "^5.3.0",
    "eslint": "^3.5.0",
    "eslint-config-modularis": "^0.2.0",
    "eslint-plugin-import": "^1.14.0",
    "foundation-sites": "^6.2.3",
    "mocha": "^3.0.2",
    "node-sass": "^3.9.3",
    "pre-git": "^3.10.0",
    "rollup": "^0.35.7",
    "rollup-plugin-buble": "^0.13.0"
  },
  "optionalDependencies": {
    "esdoc": "^0.4.8"
  },
  "main": "dist/index.js",
  "jsnext:main": "js/index.js",
  "scripts": {
    "scripts:bundle": "rollup --config --format cjs --output dist/index.js js/index.js && rollup --config --format cjs --output dist/MagicImporter.js js/lib/MagicImporter.js",
    "scripts:lint": "eslint js/* test/*",
    "scripts:lint-no-error": "eslint js/* test/* || exit 0",
    "scripts:doc": "esdoc -c .esdocrc",
    "scripts": "npm run scripts:lint-no-error && npm run scripts:bundle",
    "test": "mocha"
  },
  "config": {
    "pre-git": {
      "pre-commit": [
        "npm run scripts:lint"
      ],
      "pre-push": [
        "npm test"
      ]
    }
  }
}
